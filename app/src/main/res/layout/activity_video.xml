<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xy.wanandroid.ui.drawer.activity.VideoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:theme="@style/EditText">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme"
            app:navigationIcon="@drawable/icon_back" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            tl:tl_divider_color="@color/theme"
            tl:tl_divider_width="@dimen/dp_1"
            tl:tl_iconVisible="false"
            tl:tl_indicator_color="@color/theme"
            tl:tl_indicator_margin_left="@dimen/dp_5"
            tl:tl_indicator_margin_right="@dimen/dp_5"
            tl:tl_indicator_style="BLOCK"
            tl:tl_textSelectColor="@color/white_255"
            tl:tl_textUnselectColor="@color/homepage_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/black_15" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>