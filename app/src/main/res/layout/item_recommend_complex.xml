<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white_255"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_1"
    app:cardPreventCornerOverlap="false"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_contents"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_toStartOf="@+id/image_content"
                android:layout_height="wrap_content"
                android:textColor="@color/homepage_color" />

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:id="@+id/image_content"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:src="@color/black_30" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text=""
            android:textColor="@color/finish"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text=""
            android:textColor="@color/finish"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
</android.support.v7.widget.CardView>