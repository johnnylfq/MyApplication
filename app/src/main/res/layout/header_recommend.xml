<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_20">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@drawable/drawable_circle_view" />

        <TextView
            android:id="@+id/tv_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toEndOf="@+id/view"
            android:textColor="@color/black_255"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/view_cate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/drawable_recommend_select"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/icon_cate_bottom" />

            <TextView
                android:id="@+id/tv_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:text="@string/choose_cate"
                android:textColor="@color/finish"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>